module Wool
  module Parsers
    grammar Annotation
      include Class
      rule root
        type
      end
      
      rule type
        (top / self_type / variance_constraint)
      end
    
      rule top
        "Top" {
          def constraints
            []
          end
        }
      end
  
      rule self_type
        "self" {
          def constraints
            [Constraints::SelfTypeConstraint.new]
          end
        }
      end
    end
  end
end